<h1>Listing favs</h1>

<table>
  <tr>
    <th>User</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @favs.each do |fav| %>
  <tr>
    <td><%= fav.user %></td>
    <td><%= fav.post %></td>
    <td><%= link_to 'Show', fav %></td>
    <td><%= link_to 'Edit', edit_fav_path(fav) %></td>
    <td><%= link_to 'Destroy', fav, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

